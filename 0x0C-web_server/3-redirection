#!/usr/bin/env bash
# Installing Nginx web server

# Updating server
sudo apt-get -y update
# Upgrading server
sudo apt-get -y upgrade
# Installing nginx
sudo apt-get -y install nginx
# Starting nginx
sudo service nginx start
# Giving permissions to file
sudo chmod 777 /var/www/html/index.nginx-debian.html
# Writing the string on the index.nginx-debian.html
echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html
# Restarting service
sudo service nginx restart
# Asking if the program has to restart nginx
# Giving permissions to default file
sudo chmod 777 /etc/nginx/sites-available/default
sed -i '/server_name/ a rewrite ^/$ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default
